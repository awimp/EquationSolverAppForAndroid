<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TwoEquations">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextCoeficient"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Введіть коефіцієнти"
            android:inputType="textMultiLine" />


        <Button
            android:id="@+id/buttonMatrixMethod"
            android:layout_width="250dp"
            android:layout_height="67dp"
            android:text="Матричний метод" />

        <Button
            android:id="@+id/buttonGausMethod"
            android:layout_width="252dp"
            android:layout_height="65dp"
            android:text="Метод Гауса" />



        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_marginTop="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="420dp">

        <Button
            android:id="@+id/saveTwoEquationsButton"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_weight="1"
            android:text="Зберегти в файл" />

        <Button
            android:id="@+id/openTwoEquationsButton"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_weight="1"
            android:text="Відкрити з файла" />

        <Button
            android:id="@+id/buttonGraph3"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="Побудувати графік" />
    </LinearLayout>


</FrameLayout>