<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThreeEquations">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextEquations"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Введіть коефіцієнти"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/buttonMatrixMethod"
            android:layout_width="233dp"
            android:layout_height="72dp"
            android:text="Матричний метод" />

        <Button
            android:id="@+id/buttonGausMethod"
            android:layout_width="234dp"
            android:layout_height="70dp"
            android:text="Метод Гауса" />


        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="383dp"
            android:layout_height="148dp"
            android:layout_marginTop="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="420dp">

        <Button
            android:id="@+id/saveThreeEquationsButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Зберегти в файл" />

        <Button
            android:id="@+id/openThreeEquationsButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Відкрити з файла" />
    </LinearLayout>
</FrameLayout>